<% content_for :head do %>
  <script type="module" src="https://ajax.googleapis.com/ajax/libs/model-viewer/3.4.0/model-viewer.min.js"></script>
<% end %>

<div class="container mx-auto px-2 sm:px-4 py-4 sm:py-8">
  <!-- Header -->
  <div class="text-center mb-6 md:mb-8">
    <h1 class="font-black mb-4" style="font-size: clamp(3rem, 6vw, 4rem); color: var(--text-primary); letter-spacing: -0.03em;">
      Image to 3D Model <%= render "shared/gpu_health_indicator", service: "model3d" %>
    </h1>
    <p class="font-medium" style="font-size: clamp(1.25rem, 2vw, 1.75rem); color: var(--text-secondary); letter-spacing: -0.01em;">
      Generate 3D models from images using Hunyuan3D + UltraShape
    </p>
    <p class="text-sm text-gray-500 mt-2">Processing takes 1-2 minutes</p>
  </div>

  <div class="max-w-4xl mx-auto">
    <!-- Upload Form -->
    <div id="upload-section" class="rounded-lg p-3 sm:p-6 mb-4 sm:mb-6" style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);">
      <div class="space-y-4">
        <div>
          <label for="image-file" class="block text-sm font-medium text-gray-300 mb-2">
            Upload an image
          </label>
          <input
            type="file"
            id="image-file"
            accept="image/*"
            class="w-full px-3 py-2 rounded-md focus:outline-none text-white text-sm"
            style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1);"
            onchange="handleImagePreview(this)"
          >
          <p class="mt-1.5 text-xs text-gray-500">Works best with single objects on clean backgrounds</p>
          <div id="preview-container" class="mt-3" style="display: none;">
            <img id="preview-image" class="max-h-64 rounded-md mx-auto" />
          </div>
        </div>

        <button
          type="button"
          onclick="generate3D()"
          id="generate-btn"
          class="w-full font-semibold py-3 px-4 rounded-md transition duration-200"
          style="background: linear-gradient(45deg, #8b5cf6, #6366f1); color: #fff;"
        >
          Generate 3D Model
        </button>
      </div>
    </div>

    <!-- Status Display -->
    <div id="status" style="display:none;" class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <svg class="animate-spin h-5 w-5 mr-3 text-yellow-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span id="status-text" class="text-yellow-700">Generating 3D model...</span>
      </div>
      <div id="queue-position" class="mt-2 text-sm text-yellow-600"></div>
      <p class="mt-2 text-xs text-yellow-600">This typically takes 1-2 minutes</p>
    </div>

    <!-- Error Display -->
    <div id="error" style="display:none;" class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <div class="flex items-start">
        <svg class="h-5 w-5 text-red-400 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 18a8 8 0 100-16 8 8 0 000 16zm0-12v4m0 4h.01"/>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Generation failed</h3>
          <div id="error-message" class="mt-1 text-sm text-red-700"></div>
        </div>
      </div>
    </div>

    <!-- Result Display -->
    <div id="result" style="display:none;">
      <div class="rounded-lg p-4" style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);">
        <h3 class="text-lg font-semibold text-white mb-2">Your 3D Model</h3>
        <p class="text-sm text-gray-400 mb-4" id="result-info"></p>

        <!-- 3D Model Viewer -->
        <div class="mb-4 rounded-lg overflow-hidden" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);">
          <model-viewer
            id="model-viewer"
            src=""
            alt="Generated 3D model"
            auto-rotate
            camera-controls
            shadow-intensity="1"
            ar
            ar-modes="webxr scene-viewer quick-look"
            style="width: 100%; height: 400px;">
            <button slot="ar-button" style="position: absolute; bottom: 16px; right: 16px; background: rgba(255,255,255,0.9); padding: 8px 16px; border-radius: 8px; font-weight: bold; cursor: pointer; border: none;">
              View in AR
            </button>
          </model-viewer>
        </div>

        <div class="flex gap-4">
          <a id="download-link" href="#" download
            class="flex-1 text-center text-white font-semibold py-2 px-4 rounded transition duration-200"
            style="background: linear-gradient(45deg, #8b5cf6, #6366f1);">
            Download GLB
          </a>
          <button
            type="button"
            onclick="generateNew()"
            class="flex-1 font-semibold py-2 px-4 rounded transition duration-200"
            style="background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1); color: rgba(255,255,255,0.95);"
          >
            Generate Another
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
let currentGenerationId = null;
let pollingInterval = null;

function getCsrfToken() {
  const meta = document.querySelector('meta[name="csrf-token"]');
  return meta ? meta.getAttribute('content') : '';
}

function handleImagePreview(input) {
  const previewContainer = document.getElementById('preview-container');
  const previewImage = document.getElementById('preview-image');

  if (input.files && input.files[0]) {
    const reader = new FileReader();
    reader.onload = function(e) {
      previewImage.src = e.target.result;
      previewContainer.style.display = 'block';
    };
    reader.readAsDataURL(input.files[0]);
  } else {
    previewContainer.style.display = 'none';
  }
}

async function generate3D() {
  const fileInput = document.getElementById('image-file');

  if (!fileInput.files || !fileInput.files[0]) {
    alert('Please select an image');
    return;
  }

  if (pollingInterval) {
    clearInterval(pollingInterval);
    pollingInterval = null;
  }

  const generateBtn = document.getElementById('generate-btn');
  generateBtn.disabled = true;
  generateBtn.textContent = 'Processing...';

  document.getElementById('result').style.display = 'none';
  document.getElementById('error').style.display = 'none';
  document.getElementById('status').style.display = 'block';
  document.getElementById('status-text').textContent = 'Generating 3D model...';
  document.getElementById('queue-position').textContent = '';

  try {
    const formData = new FormData();
    formData.append('image', fileInput.files[0]);

    const response = await fetch('/3d/generate', {
      method: 'POST',
      headers: {
        'X-CSRF-Token': getCsrfToken()
      },
      body: formData
    });

    const data = await response.json();

    if (!data.success) {
      showError(data.error || 'Failed to start generation');
      return;
    }

    currentGenerationId = data.generation_id;
    console.log('Generation started:', currentGenerationId);

    startPolling();

  } catch (error) {
    showError('Failed to start generation: ' + error.message);
  }
}

function startPolling() {
  pollingInterval = setInterval(async () => {
    if (!currentGenerationId) {
      clearInterval(pollingInterval);
      return;
    }

    try {
      const response = await fetch(`/3d/${currentGenerationId}/status`);
      const statusData = await response.json();

      if (statusData.status === 'complete') {
        clearInterval(pollingInterval);
        pollingInterval = null;
        fetchAndDisplayResult();
      } else if (statusData.status === 'queued' && statusData.position) {
        document.getElementById('queue-position').textContent = `Position in queue: ${statusData.position}`;
      } else if (statusData.status === 'processing') {
        document.getElementById('status-text').textContent = 'Generating 3D model...';
        document.getElementById('queue-position').textContent = '';
      } else if (statusData.status === 'failed') {
        clearInterval(pollingInterval);
        showError(statusData.error || 'Generation failed');
      }
    } catch (error) {
      console.error('Polling error:', error);
    }
  }, 2000); // Poll every 2 seconds (3D generation is slow)
}

async function fetchAndDisplayResult() {
  try {
    const response = await fetch(`/3d/${currentGenerationId}/result`);
    const data = await response.json();

    document.getElementById('status').style.display = 'none';
    document.getElementById('error').style.display = 'none';
    document.getElementById('result').style.display = 'block';

    document.getElementById('result-info').textContent = `Generated from: ${data.original_filename}`;

    // Set the model-viewer source
    const modelViewer = document.getElementById('model-viewer');
    modelViewer.src = `/3d/${currentGenerationId}/glb`;

    document.getElementById('download-link').href = data.download_url;

    const generateBtn = document.getElementById('generate-btn');
    generateBtn.disabled = false;
    generateBtn.textContent = 'Generate 3D Model';
  } catch (error) {
    showError('Failed to load result: ' + error.message);
  }
}

function showError(message) {
  document.getElementById('status').style.display = 'none';
  document.getElementById('error').style.display = 'block';
  document.getElementById('error-message').textContent = message;

  const generateBtn = document.getElementById('generate-btn');
  generateBtn.disabled = false;
  generateBtn.textContent = 'Generate 3D Model';

  if (pollingInterval) {
    clearInterval(pollingInterval);
    pollingInterval = null;
  }
}

function generateNew() {
  document.getElementById('result').style.display = 'none';
  document.getElementById('error').style.display = 'none';
  document.getElementById('preview-container').style.display = 'none';
  document.getElementById('image-file').value = '';
  currentGenerationId = null;

  if (pollingInterval) {
    clearInterval(pollingInterval);
    pollingInterval = null;
  }
}
</script>
