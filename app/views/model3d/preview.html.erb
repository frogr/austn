<% content_for :head do %>
  <script type="module" src="https://ajax.googleapis.com/ajax/libs/model-viewer/3.4.0/model-viewer.min.js"></script>
<% end %>

<div class="container mx-auto px-2 sm:px-4 py-4 sm:py-8">
  <div class="text-center mb-6">
    <h1 class="text-2xl font-bold text-white mb-2">3D Model Preview</h1>
    <p class="text-gray-400">Rotate, zoom, and pan to explore your 3D model</p>
  </div>

  <div class="max-w-4xl mx-auto">
    <!-- 3D Model Viewer -->
    <div class="rounded-lg overflow-hidden mb-4" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);">
      <model-viewer
        src="<%= glb_model3d_path(@generation_id) %>"
        alt="3D model"
        auto-rotate
        camera-controls
        shadow-intensity="1"
        ar
        ar-modes="webxr scene-viewer quick-look"
        style="width: 100%; height: 70vh; min-height: 400px;">
        <button slot="ar-button" class="ar-button">
          View in AR
        </button>
      </model-viewer>
    </div>

    <div class="flex gap-4 justify-center">
      <a href="<%= download_model3d_path(@generation_id) %>" download
         class="text-white font-semibold py-2 px-6 rounded-lg transition duration-200"
         style="background: #10b981;">
        Download GLB
      </a>
      <a href="/3d" class="font-semibold py-2 px-6 rounded-lg transition duration-200"
         style="background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1); color: rgba(255,255,255,0.95);">
        Generate Another
      </a>
    </div>
  </div>
</div>

<style>
.ar-button {
  position: absolute;
  bottom: 16px;
  right: 16px;
  background: rgba(255, 255, 255, 0.9);
  padding: 8px 16px;
  border-radius: 8px;
  font-weight: bold;
  cursor: pointer;
  border: none;
  color: #333;
}

.ar-button:hover {
  background: white;
}
</style>
