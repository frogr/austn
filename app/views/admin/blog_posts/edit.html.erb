<div class="container mx-auto px-2 sm:px-4 py-4 sm:py-8 max-w-4xl">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 md:mb-8 gap-4">
    <div>
      <h1 class="font-black mb-2" style="font-size: clamp(2rem, 4vw, 2.5rem); color: var(--text-primary); letter-spacing: -0.03em;">
        Edit Blog Post
      </h1>
      <p class="text-gray-400 text-sm">Editing: <%= @blog_post.title %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to blog_post_path(@blog_post.slug), target: "_blank", class: "inline-flex items-center gap-2 font-semibold py-2 px-4 rounded-md transition duration-200 text-white bg-blue-600 hover:bg-blue-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
        View Post
      <% end %>
      <%= link_to admin_blog_posts_path, class: "inline-flex items-center gap-2 font-semibold py-2 px-4 rounded-md transition duration-200 text-white bg-gray-700 hover:bg-gray-600" do %>
        Back to List
      <% end %>
    </div>
  </div>

  <% if @blog_post.errors.any? %>
    <div class="mb-4 p-3 rounded-md bg-red-900/50 text-red-300 border border-red-700">
      <ul class="list-disc list-inside">
        <% @blog_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="rounded-lg p-6" style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);">
    <%= form_with model: [:admin, @blog_post], class: "space-y-6" do |f| %>
      <div>
        <%= f.label :title, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_field :title, class: "w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent", placeholder: "Enter post title" %>
      </div>

      <div>
        <%= f.label :slug, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_field :slug, class: "w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
        <p class="mt-1 text-xs text-gray-500">Changing the slug will break existing links</p>
      </div>

      <div>
        <%= f.label :published_at, "Publish Date", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.datetime_local_field :published_at, value: @blog_post.published_at&.strftime("%Y-%m-%dT%H:%M"), class: "w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
        <p class="mt-1 text-xs text-gray-500">Set a past date to backdate the post. If blank, created_at will be used as the display date.</p>
      </div>

      <div>
        <%= f.label :content, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_area :content, rows: 20, class: "w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent font-mono text-sm", placeholder: "Write your markdown content here..." %>
        <p class="mt-1 text-xs text-gray-500">Supports markdown formatting</p>
      </div>

      <div class="flex gap-3 pt-4">
        <%= f.submit "Update Post", class: "inline-flex items-center gap-2 font-semibold py-3 px-6 rounded-md transition duration-200 text-white bg-green-600 hover:bg-green-500 cursor-pointer" %>
        <%= link_to "Cancel", admin_blog_posts_path, class: "inline-flex items-center gap-2 font-semibold py-3 px-6 rounded-md transition duration-200 text-gray-300 bg-gray-700 hover:bg-gray-600" %>
      </div>
    <% end %>
  </div>

  <!-- Metadata Info -->
  <div class="mt-6 p-4 rounded-lg" style="background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.05);">
    <h3 class="text-sm font-semibold text-gray-400 mb-2">Post Metadata</h3>
    <div class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <span class="text-gray-500">Created:</span>
        <span class="text-gray-300"><%= @blog_post.created_at.strftime("%B %d, %Y at %l:%M %p") %></span>
      </div>
      <div>
        <span class="text-gray-500">Updated:</span>
        <span class="text-gray-300"><%= @blog_post.updated_at.strftime("%B %d, %Y at %l:%M %p") %></span>
      </div>
    </div>
  </div>
</div>
