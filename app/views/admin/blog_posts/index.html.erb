<div class="container mx-auto px-2 sm:px-4 py-4 sm:py-8">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 md:mb-8 gap-4">
    <div>
      <h1 class="font-black mb-2" style="font-size: clamp(2rem, 4vw, 2.5rem); color: var(--text-primary); letter-spacing: -0.03em;">
        Blog Administration
      </h1>
      <p class="text-gray-400 text-sm">
        <%= @published_count %> published, <%= @draft_count %> drafts
        <% if @r2_configured %>
          <span class="ml-2 px-2 py-0.5 text-xs rounded bg-cyan-900/50 text-cyan-400 border border-cyan-700">R2 CDN Active</span>
        <% else %>
          <span class="ml-2 px-2 py-0.5 text-xs rounded bg-gray-800 text-gray-500 border border-gray-700">R2 CDN Not Configured</span>
        <% end %>
      </p>
    </div>
    <div class="flex gap-2">
      <%= link_to admin_root_path, class: "inline-flex items-center gap-2 font-semibold py-2 px-4 rounded-md transition duration-200 text-white bg-gray-700 hover:bg-gray-600" do %>
        Admin Home
      <% end %>
      <%= link_to new_admin_blog_post_path, class: "inline-flex items-center gap-2 font-semibold py-2 px-4 rounded-md transition duration-200 text-white bg-green-600 hover:bg-green-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg>
        New Post
      <% end %>
    </div>
  </div>

  <% if notice.present? %>
    <div class="mb-4 p-3 rounded-md bg-green-900/50 text-green-300 border border-green-700">
      <%= notice %>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="mb-4 p-3 rounded-md bg-red-900/50 text-red-300 border border-red-700">
      <%= alert %>
    </div>
  <% end %>

  <div class="rounded-lg overflow-hidden" style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);">
    <% if @blog_posts.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr style="background: rgba(255,255,255,0.03);">
              <th class="text-left px-4 py-3 text-sm font-semibold text-gray-300">Title</th>
              <th class="text-left px-4 py-3 text-sm font-semibold text-gray-300">Slug</th>
              <th class="text-left px-4 py-3 text-sm font-semibold text-gray-300">Published</th>
              <th class="text-left px-4 py-3 text-sm font-semibold text-gray-300">Created</th>
              <th class="text-center px-4 py-3 text-sm font-semibold text-gray-300">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y" style="border-color: rgba(255,255,255,0.05);">
            <% @blog_posts.each do |post| %>
              <tr class="hover:bg-white/5 transition-colors <%= 'opacity-50' unless post.published_at %>">
                <td class="px-4 py-3 text-sm text-white">
                  <span class="font-medium"><%= post.title %></span>
                  <% unless post.published_at %>
                    <span class="ml-2 px-2 py-0.5 text-xs rounded bg-yellow-900/50 text-yellow-400 border border-yellow-700">Draft</span>
                  <% end %>
                </td>
                <td class="px-4 py-3 text-sm text-gray-400">
                  <code class="text-xs bg-gray-800 px-2 py-1 rounded"><%= post.slug %></code>
                </td>
                <td class="px-4 py-3 text-sm whitespace-nowrap">
                  <% if post.published_at %>
                    <span class="text-green-400"><%= post.published_at.strftime("%b %d, %Y") %></span>
                  <% else %>
                    <span class="text-gray-500">Not published</span>
                  <% end %>
                </td>
                <td class="px-4 py-3 text-sm text-gray-400 whitespace-nowrap">
                  <%= post.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="px-4 py-3">
                  <div class="flex items-center justify-center gap-2">
                    <!-- View Button -->
                    <% if post.published_at %>
                      <%= link_to blog_post_path(post.slug), target: "_blank", class: "p-2 rounded-md transition-colors hover:bg-white/10", title: "View post" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                      <% end %>
                    <% end %>

                    <!-- Sync Images to R2 Button -->
                    <% if @r2_configured %>
                      <%= link_to sync_images_admin_blog_post_path(post), data: { turbo_method: :post, turbo_confirm: "Sync images to R2 CDN?" }, class: "p-2 rounded-md transition-colors hover:bg-white/10", title: "Sync images to R2" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                        </svg>
                      <% end %>
                    <% end %>

                    <!-- Edit Button -->
                    <%= link_to edit_admin_blog_post_path(post), class: "p-2 rounded-md transition-colors hover:bg-white/10", title: "Edit" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>

                    <!-- Delete Button -->
                    <%= link_to admin_blog_post_path(post), data: { turbo_method: :delete, turbo_confirm: "Delete this blog post?" }, class: "p-2 rounded-md transition-colors hover:bg-white/10", title: "Delete" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12 px-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto mb-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <h3 class="text-lg font-semibold text-gray-300 mb-2">No blog posts</h3>
        <p class="text-gray-500 mb-4">Create your first blog post to get started.</p>
        <%= link_to new_admin_blog_post_path, class: "inline-flex items-center gap-2 font-semibold py-2 px-4 rounded-md transition duration-200 text-white bg-green-600 hover:bg-green-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
          </svg>
          New Post
        <% end %>
      </div>
    <% end %>
  </div>
</div>
