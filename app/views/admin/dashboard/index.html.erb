<div class="container mx-auto px-2 sm:px-4 py-4 sm:py-8 max-w-2xl">
  <div class="mb-8">
    <h1 class="font-black mb-2" style="font-size: clamp(2rem, 4vw, 2.5rem); color: var(--text-primary); letter-spacing: -0.03em;">
      Admin
    </h1>
    <p class="text-gray-400 text-sm">Site administration</p>
  </div>

  <%# Booking Stats %>
  <div class="grid grid-cols-2 gap-3 mb-6" data-controller="booking-notifications">
    <div class="p-4 rounded-lg" style="background: rgba(29, 185, 84, 0.1); border: 1px solid rgba(29, 185, 84, 0.2);">
      <p class="text-2xl font-bold" style="color: var(--accent-color);"><%= @upcoming_count %></p>
      <p class="text-gray-400 text-sm">Upcoming</p>
    </div>
    <div class="p-4 rounded-lg" style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);">
      <p class="text-2xl font-bold text-white"><%= @monthly_count %></p>
      <p class="text-gray-400 text-sm">This month</p>
    </div>
  </div>

  <%# Today's Bookings %>
  <% if @todays_bookings.any? %>
    <div class="mb-6">
      <h2 class="text-white font-semibold mb-3">Today's Bookings</h2>
      <div class="space-y-2">
        <% @todays_bookings.each do |booking| %>
          <%= link_to admin_booking_path(booking), class: "block p-3 rounded-lg hover:bg-white/5 transition-colors", style: "background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);" do %>
            <div class="flex items-center justify-between">
              <div>
                <span class="text-white font-medium"><%= booking.first_name %></span>
                <span class="text-gray-400 text-sm ml-2"><%= booking.formatted_start_time %></span>
              </div>
              <span class="text-gray-500 text-sm"><%= booking.email %></span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Toast container for real-time notifications %>
  <div id="booking-toast-container" class="fixed top-4 right-4 z-50 space-y-2" style="max-width: 360px;"></div>

  <div class="space-y-4">
    <%# Bookings link %>
    <%= link_to admin_bookings_path, class: "block p-4 rounded-lg hover:bg-white/5 transition-colors", style: "background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);" do %>
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg" style="background: rgba(29, 185, 84, 0.2);">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" style="color: var(--accent-color);">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <div>
          <h3 class="text-white font-semibold">Bookings</h3>
          <p class="text-gray-400 text-sm">View and manage bookings</p>
        </div>
      </div>
    <% end %>

    <%# Availabilities link %>
    <%= link_to admin_availabilities_path, class: "block p-4 rounded-lg hover:bg-white/5 transition-colors", style: "background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);" do %>
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg" style="background: rgba(100, 210, 255, 0.2);">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" style="color: var(--teal-accent);">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <h3 class="text-white font-semibold">Availability</h3>
          <p class="text-gray-400 text-sm">Manage bookable time slots</p>
        </div>
      </div>
    <% end %>

    <%= link_to admin_blog_posts_path, class: "block p-4 rounded-lg hover:bg-white/5 transition-colors", style: "background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);" do %>
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg bg-purple-900/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
        <div>
          <h3 class="text-white font-semibold">Blog Posts</h3>
          <p class="text-gray-400 text-sm">Manage and backdate blog posts</p>
        </div>
      </div>
    <% end %>

    <%= link_to admin_invoices_path, class: "block p-4 rounded-lg hover:bg-white/5 transition-colors", style: "background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);" do %>
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg bg-yellow-900/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2zM10 8.5a.5.5 0 11-1 0 .5.5 0 011 0zm5 5a.5.5 0 11-1 0 .5.5 0 011 0z" />
          </svg>
        </div>
        <div>
          <h3 class="text-white font-semibold">Invoices</h3>
          <p class="text-gray-400 text-sm">Create and manage invoices</p>
        </div>
      </div>
    <% end %>

    <%= link_to admin_clients_path, class: "block p-4 rounded-lg hover:bg-white/5 transition-colors", style: "background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);" do %>
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg bg-indigo-900/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <div>
          <h3 class="text-white font-semibold">Clients</h3>
          <p class="text-gray-400 text-sm">Manage invoice clients</p>
        </div>
      </div>
    <% end %>

    <%= link_to admin_tts_shares_path, class: "block p-4 rounded-lg hover:bg-white/5 transition-colors", style: "background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);" do %>
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg bg-green-900/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
          </svg>
        </div>
        <div>
          <h3 class="text-white font-semibold">TTS Shares</h3>
          <p class="text-gray-400 text-sm">Moderate shared audio clips</p>
        </div>
      </div>
    <% end %>

    <%= link_to tts_batches_path, class: "block p-4 rounded-lg hover:bg-white/5 transition-colors", style: "background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);" do %>
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg bg-blue-900/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <div>
          <h3 class="text-white font-semibold">TTS Batches</h3>
          <p class="text-gray-400 text-sm">Batch generate from CSV</p>
        </div>
      </div>
    <% end %>

    <%= link_to sidekiq_web_path, class: "block p-4 rounded-lg hover:bg-white/5 transition-colors", style: "background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);" do %>
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg bg-orange-900/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        </div>
        <div>
          <h3 class="text-white font-semibold">Sidekiq</h3>
          <p class="text-gray-400 text-sm">Background job monitoring</p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 pt-6 border-t border-gray-800 flex items-center justify-between">
    <%= link_to "Back to site", root_path, class: "text-gray-500 hover:text-gray-300 text-sm" %>
    <%= link_to "Logout", admin_logout_path, data: { turbo_method: :delete }, class: "text-red-500 hover:text-red-400 text-sm" %>
  </div>
</div>
