<div class="min-h-screen pt-20 pb-12 relative overflow-hidden" style="background-color: var(--bg-primary);">
  <!-- Animated gradient background -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-40 -left-40 w-96 h-96 rounded-full mix-blend-multiply filter blur-3xl" 
         style="background: var(--gradient-cool); animation: float 15s ease-in-out infinite;"></div>
    <div class="absolute bottom-40 -right-40 w-96 h-96 rounded-full mix-blend-multiply filter blur-3xl" 
         style="background: var(--gradient-accent); animation: float 20s ease-in-out infinite reverse;"></div>
  </div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Back link with hover effect -->
    <div class="mb-8">
      <%= link_to root_path, class: "inline-flex items-center gap-2 btn btn-secondary group" do %>
        <span class="material-icons transform group-hover:-translate-x-1 transition-transform">arrow_back</span>
        <span>Back to Home</span>
      <% end %>
    </div>

    <article class="glass-thick rounded-3xl p-8 md:p-12 relative overflow-hidden"
             style="animation: fadeIn 0.8s ease-out;">
      <!-- Gradient accent decoration -->
      <div class="absolute -top-20 -right-20 w-40 h-40 opacity-20"
           style="background: var(--gradient-vibrant); filter: blur(80px);"></div>
      <header class="mb-8 relative">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-clip-text text-transparent"
            style="background-image: var(--gradient-accent); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
          My Tech Setup
        </h1>
        
        <p class="text-lg" style="color: var(--text-muted);">
          The tools and gear that power my daily workflow
        </p>
      </header>

      <div class="prose-container max-w-full">
        <% 
          # Tech setup content stored as JSON for React markdown component
          content_id = "tech-setup-content"
          tech_content = <<~MARKDOWN
