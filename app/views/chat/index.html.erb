<% meta_title("AI Chat") %>
<% meta_description("Chat with a local LLM running on real GPU hardware. No sign-up, no API fees, no data collection. Powered by LMStudio and Qwen, hosted by Austin French.") %>

<div class="container mx-auto px-2 sm:px-4 py-4 sm:py-8 min-h-[80vh]">
  <!-- Header -->
  <div class="text-center mb-6 md:mb-8">
    <h1 class="font-black mb-4" style="font-size: clamp(2rem, 5vw, 3.5rem); color: var(--text-primary); letter-spacing: -0.03em;">
      AI Chat Completions <%= render "shared/gpu_health_indicator", service: "chat" %>
    </h1>
    <p class="font-medium" style="font-size: clamp(1rem, 2vw, 1.5rem); color: var(--text-secondary); letter-spacing: -0.01em;">Routed to my local GPU via LMStudio! (It will be slow)</p>
  </div>
  <div data-react-component="Chat"></div>
</div>