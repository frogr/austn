<div class="w-full max-w-4xl">
  <h1 class="text-3xl font-bold mb-8">Blog</h1>
  
  <div class="space-y-8">
    <% if @blog_posts.any? %>
      <% @blog_posts.each do |post| %>
        <article class="border-b pb-6 mb-6">
          <h2 class="text-2xl font-semibold mb-2">
            <%= link_to post.title, blog_post_path(post.slug), class: "hover:text-blue-600" %>
          </h2>
          
          <div class="text-gray-600 mb-4">
            <%= post.published_at.strftime("%B %d, %Y") if post.published_at %>
          </div>
          
          <div class="prose">
            <%= truncate(post.content, length: 300) %>
          </div>
          
          <%= link_to "Read more", blog_post_path(post.slug), class: "mt-4 inline-block text-blue-600 hover:underline" %>
        </article>
      <% end %>
    <% else %>
      <p class="text-gray-600">No blog posts found.</p>
    <% end %>
  </div>
</div>