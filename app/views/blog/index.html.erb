<div class="min-h-screen pt-20 pb-12 relative overflow-hidden" style="background-color: var(--bg-primary);">
  <!-- Animated gradient background -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-10 -right-20 w-96 h-96 rounded-full mix-blend-multiply filter blur-3xl opacity-30" 
         style="background: linear-gradient(135deg, var(--purple-accent) 0%, var(--pink-accent) 100%); animation: blob 10s infinite;"></div>
    <div class="absolute bottom-20 -left-20 w-96 h-96 rounded-full mix-blend-multiply filter blur-3xl opacity-30" 
         style="background: linear-gradient(135deg, var(--indigo-accent) 0%, var(--accent-color) 100%); animation: blob 12s infinite reverse;"></div>
  </div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header with gradient text -->
    <div class="text-center mb-12">
      <h1 class="text-5xl md:text-6xl font-bold mb-4 bg-clip-text text-transparent" 
          style="background-image: var(--gradient-cool); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        Blog
      </h1>
      <p class="text-xl" style="color: var(--text-secondary);">
        Thoughts on development, design, and technology
      </p>
    </div>
    
    <!-- Blog Posts -->
    <div class="space-y-6">
      <% if @blog_posts.any? %>
        <% @blog_posts.each_with_index do |post, index| %>
          <article class="bento-box hover:scale-[1.01] hover:-translate-y-1 transition-all duration-300 relative overflow-hidden group"
                   style="animation: fadeInUp 0.6s ease-out <%= index * 0.1 %>s both;">
            <!-- Gradient accent -->
            <div class="absolute top-0 right-0 w-32 h-32 opacity-0 group-hover:opacity-20 transition-opacity duration-500"
                 style="background: var(--gradient-accent); filter: blur(60px);"></div>
            
            <h2 class="text-2xl font-semibold mb-3">
              <%= link_to post.title, blog_post_path(post.slug), 
                  class: "bg-clip-text hover:text-transparent transition-all duration-300",
                  style: "color: var(--text-primary); background-image: var(--gradient-accent);" %>
            </h2>
            
            <div class="text-sm mb-4 flex items-center gap-2" style="color: var(--text-muted);">
              <span class="material-icons text-xs" style="color: var(--accent-secondary);">calendar_today</span>
              <%= post.published_at.strftime("%B %d, %Y") if post.published_at %>
            </div>
            
            <div class="mb-6 line-clamp-3" style="color: var(--text-secondary);">
              <%= truncate(strip_tags(post.content), length: 200) %>
            </div>
            
            <%= link_to blog_post_path(post.slug), 
                class: "inline-flex items-center font-medium group-hover:gap-3 transition-all",
                style: "color: var(--accent-color);" do %>
              <span>Read more</span>
              <span class="material-icons ml-1 transform group-hover:translate-x-1 transition-transform">arrow_forward</span>
            <% end %>
          </article>
        <% end %>
      <% else %>
        <div class="glass-thick rounded-2xl p-12 text-center">
          <p class="text-lg" style="color: var(--text-muted);">No blog posts yet. Check back soon!</p>
        </div>
      <% end %>
    </div>
  </div>

  <style>
    @keyframes blob {
      0%, 100% { transform: translate(0px, 0px) scale(1) rotate(0deg); }
      33% { transform: translate(30px, -50px) scale(1.1) rotate(120deg); }
      66% { transform: translate(-20px, 20px) scale(0.9) rotate(240deg); }
    }
    @keyframes fadeInUp {
      from { 
        opacity: 0; 
        transform: translateY(30px); 
      }
      to { 
        opacity: 1; 
        transform: translateY(0); 
      }
    }
  </style>
</div>