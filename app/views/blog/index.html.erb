<div class="bg-black text-white min-h-screen">
  <div class="max-w-4xl mx-auto py-8 px-4" id="page-content">
<div style="background-color: var(--bg-primary); color: var(--text-primary);" class="min-h-screen">
  <div class="max-w-4xl mx-auto py-8 px-4 ml-16 transition-all duration-300" id="page-content">
    <h1 class="text-3xl font-bold mb-8">Blog</h1>
    
    <div class="space-y-8">
      <% if @blog_posts.any? %>
        <% @blog_posts.each do |post| %>
          <article class="glass-panel pb-6 mb-6 p-6 rounded-md relative">
            <!-- Decorative elements for glass effect -->
            <div class="absolute top-0 left-0 w-full h-full overflow-hidden rounded-md z-0">
              <div class="absolute -top-16 -right-16 w-32 h-32 rounded-full blur-lg" 
                  style="background: rgba(100, 100, 255, 0.05); animation: pulse-slow 10s infinite, float 15s ease-in-out infinite;"></div>
            </div>
            <h2 class="text-2xl font-semibold mb-2">
              <%= link_to post.title, blog_post_path(post.slug), class: "theme-link" %>
            </h2>
            
            <div style="color: var(--text-muted);" class="mb-4">
              <%= post.published_at.strftime("%B %d, %Y") if post.published_at %>
            </div>
            
            <div class="prose">
              <%= truncate(post.content, length: 300) %>
            </div>
            
            <%= link_to "Read more", blog_post_path(post.slug), class: "mt-4 inline-block glass-button" %>
          </article>
        <% end %>
      <% else %>
        <p style="color: var(--text-muted);">No blog posts found.</p>
      <% end %>
    </div>
  </div>
</div>