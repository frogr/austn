<div id="movement-demo-container" class="w-full h-screen">
  <!-- The demo will be rendered in this container -->
  
  <div id="start-screen" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-75 z-50">
    <div class="text-center">
      <h2 class="text-4xl font-bold text-white mb-4">Movement Demo</h2>
      <p class="text-xl text-white mb-8">Test for WASD movement and mouse camera controls</p>
      
      <div class="bg-gray-800 p-6 rounded-lg mb-8 max-w-md mx-auto text-left">
        <h3 class="font-bold text-white text-xl mb-2">CONTROLS:</h3>
        <ul class="text-gray-300 space-y-2">
          <li><span class="bg-green-700 px-2 py-1 rounded font-bold">W A S D</span> - Move</li>
          <li><span class="bg-green-700 px-2 py-1 rounded font-bold">Mouse</span> - Look around</li>
          <li><span class="bg-green-700 px-2 py-1 rounded font-bold">ESC</span> - Release mouse cursor</li>
        </ul>
      </div>
      
      <button id="start-button" class="bg-green-500 hover:bg-green-600 text-black font-bold py-3 px-8 rounded-lg transition-colors text-xl animate-pulse">
        START DEMO
      </button>
    </div>
  </div>
  
  <div id="crosshair" class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 pointer-events-none z-40 hidden">
    <div class="w-2 h-2 bg-white rounded-full"></div>
  </div>
</div>

<!-- Import Three.js from CDN -->
<script async src="https://unpkg.com/es-module-shims@1.3.6/dist/es-module-shims.js"></script>
<script type="importmap">
{
  "imports": {
    "three": "https://unpkg.com/three@0.158.0/build/three.module.js",
    "three/addons/": "https://unpkg.com/three@0.158.0/examples/"
  }
}
</script>

<%= javascript_include_tag "movement_demo" %>