<% content_for :title, "Images" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-white">Images</h1>
    <%= link_to "New", new_image_path,
                class: "px-3 py-1.5 text-sm font-medium rounded transition-all hover:opacity-90",
                style: "background: var(--accent-color); color: #000;" %>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @images.each do |image| %>
      <div class="group rounded overflow-hidden transition-all hover:opacity-90"
           style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08);">
        <% if image.file.attached? %>
          <%= link_to image_path(image) do %>
            <%= image_tag image.file.variant(resize_to_fill: [300, 300]),
                          class: "w-full h-48 object-cover",
                          loading: "lazy" %>
          <% end %>
        <% else %>
          <div class="w-full h-48 flex items-center justify-center"
               style="background: rgba(255,255,255,0.02);">
            <span style="color: rgba(255,255,255,0.3);">No image</span>
          </div>
        <% end %>

        <div class="p-3">
          <h3 class="text-sm font-medium text-white mb-1">
            <%= link_to image.title, image_path(image),
                        class: "hover:opacity-80 transition" %>
          </h3>

          <div class="flex justify-between items-center text-xs mt-2">
            <span style="color: rgba(255,255,255,0.5);">
              <%= image.published? ? "Published" : "Draft" %>
            </span>
            <div class="flex gap-2">
              <%= link_to "Edit", edit_image_path(image),
                          style: "color: rgba(255,255,255,0.6);" %>
              <%= link_to "Delete", image_path(image),
                          method: :delete,
                          data: { "turbo-method": :delete, "turbo-confirm": "Delete this image?" },
                          style: "color: rgba(255,59,48,0.6);" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @images.empty? %>
    <div class="text-center py-12">
      <p style="color: rgba(255,255,255,0.5);" class="mb-4">No images yet</p>
      <%= link_to "Add your first image", new_image_path,
                  style: "color: var(--accent-color);" %>
    </div>
  <% end %>
</div>