<% content_for :title, "Images" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-white">Images</h1>
    <%= link_to "New Image", new_image_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @images.each do |image| %>
      <div class="glass-card rounded-lg overflow-hidden hover:shadow-xl transition">
        <% if image.file.attached? %>
          <%= link_to image_path(image) do %>
            <%= image_tag image.file.variant(resize_to_fill: [300, 300]),
                          class: "w-full h-48 object-cover",
                          loading: "lazy" %>
          <% end %>
        <% else %>
          <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
            <span class="text-gray-500">No image</span>
          </div>
        <% end %>

        <div class="p-4">
          <h3 class="text-lg font-semibold text-white mb-2">
            <%= link_to image.title, image_path(image), class: "hover:text-blue-400 transition" %>
          </h3>

          <% if image.description.present? %>
            <p class="text-gray-400 text-sm mb-3 line-clamp-2">
              <%= truncate(image.description, length: 100) %>
            </p>
          <% end %>

          <div class="flex justify-between items-center">
            <%= link_to "View", image_path(image),
                        class: "text-sm text-blue-400 hover:text-blue-300 transition" %>
            <div class="flex gap-2">
              <%= link_to "Edit", edit_image_path(image),
                          class: "text-sm text-gray-400 hover:text-white transition" %>
              <%= link_to "Delete", image_path(image),
                          method: :delete,
                          data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" },
                          class: "text-sm text-red-400 hover:text-red-300 transition" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @images.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-400 mb-4">No images yet.</p>
      <%= link_to "Add your first image", new_image_path,
                  class: "text-blue-400 hover:text-blue-300 transition" %>
    </div>
  <% end %>
</div>